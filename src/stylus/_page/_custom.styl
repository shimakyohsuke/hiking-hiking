@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600');

body
	font-family "游ゴシック", YuGothic, fontFamily
	line-height 1.8
	color textColor
	font-size 100%

a
	color #F99F48
	text-decoration none
	&:hover
		color #F99F48
		text-decoration underline
p
	color textColor

img
	max-width 100%
	height auto

.hh-header
	display flex
	flex-direction column
	.hh-site_meta
		background #78BBE6
		&__inner
			max-width contentWidth
			margin 0 auto
			display flex
			justify-content space-between
			align-items center

.hh-nav
	background #D5EEFF
	&__inner
		max-width contentWidth
		margin 0 auto
	&__list
		display flex
		justify-content flex-start
		margin 0
		padding 0
		li
			a
				color textColor
				font-size px14
				display block
				padding 3px 1em
				&:hover
					background #FFF
					text-decoration none

@media screen and (max-width: screenSmallMin)
	.hh-site_meta,
	.hh-nav
		padding 5px
	.hh-site_meta__inner
		justify-content center
		flex-wrap wrap
		& > div
			width 90%
	.hh-site_title
		margin-bottom 0

.hh-site_title
	font-family 'Source Sans Pro', "游ゴシック", YuGothic, fontFamily
	font-size px20
	color #FFF
	font-weight 600
	a
		text-decoration none
		color #FFF
		font-weight 600
		&:visited
			color #FFF
		&:hover
			color #FFF

.hh-site_tagline
	color #FFF
	font-size px14
	font-weight 400

.hh-list__title
	margin-top 60px
	margin-bottom 0
	font-size px20
	color textColor
	a
		color textColor
		&:hover
			color #F99F48

@media screen and (max-width: screenSmallMin)
	.hh-list__title
		margin-top 40px

.hh-list__description
	margin-top 0

.hh-ad__for_mobile
	display none

@media screen and (max-width: screenSmallMin)
	.hh-ad__for_pc
		display none
	.hh-ad__for_mobile
		display block

.hh-button
	background-color #F99F48
	padding 0 10px
	color #FFF
	display inline-block
	box-sizing border-box
	border 1px solid #F99F48
	transition 0.2s linear
	&:hover
		color #F99F48
		text-decoration none
		background-color #fff

.hh-button.is-disabled
	background-color #F2F2F2
	border 1px solid #F2F2F2
	&:hover
		color #FFF
		text-decoration none
		background-color #F2F2F2

.hh-container
	padding 0 10px

.hh-content
	max-width contentWidth
	margin 0 auto
	background-color #fff

.hh-footer
	margin-top 5em
	padding-bottom 5px
	border-bottom 5px solid textColor

.hh-post
	h1, h2, h3, h4, h5, h6
		margin-top 0
		line-height 1.5
		&:not(:first-child)
			margin-top 40px
	& &__title
		margin-top 60px
	code
		background-color #f8f8f8
	h1+h2:not(:first-child),
	h2+h3:not(:first-child),
	h3+h4:not(:first-child),
	h4+h5:not(:first-child),
	h5+h6:not(:first-child)
		margin-top: 20px
	h2
		border-bottom 1px solid #78BBE6
		padding-bottom 8px
		padding-left 3px
	h3
		border-left 4px solid #78BBE6
		padding 4px 0 4px 10px
	h4
		border-bottom 1px dotted
		padding-bottom 8px
		padding-left 3px
	strong
		background linear-gradient(transparent 70%, rgba(249, 159, 72, .7) 70%)
	figure
		text-align center
		img
			max-width 80%
	figcaption
		color #78BBE6
		margin-bottom 1em
		font-size 90%
	table
		width 100%
		border 1px #CCCCCC solid
		border-bottom 0
		border-right 0
		table-layout fixed
		font-size px14
		margin-bottom 30px
		tr
			border-bottom 1px #CCCCCC solid
		thead
			th
				background-color #F2F2F2
				text-align center
				padding 10px
				border-right 1px #CCCCCC solid
		tbody
			td
				padding 10px
				box-sizing border-box
				border-right 1px #CCCCCC solid
			th
				border-right 1px #CCCCCC solid

.hh-pagination
	margin-top 60px

@media screen and (max-width: screenSmallMin)
	.hh-post
		figure
			margin 0
			img
				max-width 100%

.hh-footer__icons
	width 50%
	margin 0 auto
	p
		a
			color #42464c

.hh-display__flex--jcs--aic
	display flex
	justify-content space-around
	align-items center

.hh-display__flex--jcsb--aic
	display flex
	justify-content space-between
	align-items center

.hh-meta
	width 100%
	float left
	&__date
		float left
		margin-right 2em

.hh-tags
	display flex
	&__list
		padding-left 1em
		li
			list-style-type none
			float left
			margin-left 1em
			&:before
				content '[ '
			&:after
				content ' ]'
			&:first-child
				margin-left 0

@media screen and (max-width: screenSmallMin)
	.hh-meta__date
		margin 0
	.hh-tags
		width 100%
		p,
		ul,
		li
			margin 0


.hh-sns
	max-width 40%
	margin 0 auto
	display flex
	justify-content space-around
	align-items center
	margin-top 60px

@media screen and (max-width: screenSmallMin)
	.hh-sns
		max-width 100%

.aligncenter
	display block
	margin 0 auto

.alignright
	float right
	margin-left 1.5em
	margin-bottom 1em

.alignleft
	float left
	margin-right 1.5em
	margin-bottom 1em
